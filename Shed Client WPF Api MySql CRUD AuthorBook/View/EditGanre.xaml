<Page x:Class="Shed_Client_WPF_Api_MySql_CRUD_AuthorBook.View.EditGanre"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Shed_Client_WPF_Api_MySql_CRUD_AuthorBook.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditGanre">

    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center">
        <Label Content="Название жанра"
               HorizontalAlignment="Center"/>
        <TextBox Text="{Binding Ganre.Name}" MinWidth="480"/>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Button Click="Save" Content="Сохранить"/>
            <Button Click="Back" Content="Отменить"/>
        </StackPanel>
    </StackPanel>
</Page>
